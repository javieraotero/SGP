@using Syncrosoft.Framework.Controles.MVC.Script;
@using Syncrosoft.Framework.Controles.Mvc.JQuery.Datatables;
@using SSO.SGP.Web.Controllers;	
@using Syncrosoft.Framework.Controles.MVC;
@model SSO.SGP.EntidadesDeNegocio.ImputacionesContables

@{
	Layout = null;
	var hash = "form"+Session.GetHashCode();
}

<script src="@Url.Content("~/assets/plugins/chosen-bootstrap/chosen/chosen.jquery.min.js")" type="text/javascript"></script>

<link rel="stylesheet" href="@Url.Content("~/assets/plugins/chosen-bootstrap/chosen/chosen.css")" />	
@Scripts.Render("~/bundles/jqueryval")
<script src="ts/ImputacionesContables/Editar.js"></script>
<script src="ts/ImputacionesContables/ImputacionesContablesManager.js"></script>
<script src="ts/Syncro/SyncroModal.js"></script>
@using (Html.BeginForm("Editar", "ImputacionesContables", FormMethod.Post, new { id = hash })) {
<div class="container-fluid">

		<div class="row">
		
		<div class="span12 m-wrap">
		
	<div class="control-group">
		@Html.LabelFor(model => model.ExpedienteAImputar, new { @class= "control-label" })
		<div class="controls">
			@Html.DropDownList("ExpedienteAImputar", (IEnumerable<System.Web.Mvc.SelectListItem>)ViewBag.ExpedientesADM, new { @class = "form-control col-md-12", @id="ExpedientesADM"+hash, @tabindex="2" })
			<script type="text/javascript">
				$(function () {
					$('#ExpedienteAImputar@(hash)').chosen();
				});
			</script>
		@Html.ValidationMessageFor(model => model.ExpedienteAImputar)
		</div>
	</div>


	</div><!--fin de div md-12-->
		</div> <!--fin del row-->
		
		<div class="row">
		
		<div class="span12 m-wrap">
		
	<div class="control-group">
		@Html.LabelFor(model => model.Fecha, new { @class= "control-label" })
		<div class="controls">
		<div class="input-append date date-picker" data-date="12-02-2012" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
			@Html.TextBoxFor(model => model.Fecha, "{0:dd/MM/yyyy}", new {@class="m-wrap form-control m-ctrl-medium date-picker", @id="Fecha"+hash, @tabindex="3" })
			<span class="add-on"><i class="icon-calendar"></i></span> 
		</div>
		<script type="text/javascript">
			$(function () {
				$('#Fecha@(hash)').datepicker(pickerOpts);
			});
		</script>
		@Html.ValidationMessageFor(model => model.Fecha)
		</div>
	</div>


	</div><!--fin de div md-12-->
		</div> <!--fin del row-->
		
		<div class="row">
		
		<div class="span12 m-wrap">
		
	<div class="control-group">
		@Html.LabelFor(model => model.FechaElimina, new { @class= "control-label" })
		<div class="controls">
		<div class="input-append date date-picker" data-date="12-02-2012" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
			@Html.TextBoxFor(model => model.FechaElimina, "{0:dd/MM/yyyy}", new {@class="m-wrap form-control m-ctrl-medium date-picker", @id="FechaElimina"+hash, @tabindex="5" })
			<span class="add-on"><i class="icon-calendar"></i></span> 
		</div>
		<script type="text/javascript">
			$(function () {
				$('#FechaElimina@(hash)').datepicker(pickerOpts);
			});
		</script>
		@Html.ValidationMessageFor(model => model.FechaElimina)
		</div>
	</div>


	</div><!--fin de div md-12-->
		</div> <!--fin del row-->
		
		<div class="row">
		
		<div class="span12 m-wrap">
		
	<div class="control-group">
		@Html.LabelFor(model => model.Operacion, new { @class= "control-label" })
		<div class="controls">
			@Html.DropDownList("Operacion", (IEnumerable<System.Web.Mvc.SelectListItem>)ViewBag.OperacionesContablesRef, new { @class = "form-control col-md-12", @id="OperacionesContablesRef"+hash, @tabindex="6" })
			<script type="text/javascript">
				$(function () {
					$('#Operacion@(hash)').chosen();
				});
			</script>
		@Html.ValidationMessageFor(model => model.Operacion)
		</div>
	</div>


	</div><!--fin de div md-12-->
		</div> <!--fin del row-->
		
		<div class="row">
		
		<div class="span12 m-wrap">
		
	<div class="control-group">
		@Html.LabelFor(model => model.ExpedienteIndirecto, new { @class= "control-label" })
		<div class="controls">
			@Html.DropDownList("ExpedienteIndirecto", (IEnumerable<System.Web.Mvc.SelectListItem>)ViewBag.ExpedientesADM, new { @class = "form-control col-md-12", @id="ExpedientesADM"+hash, @tabindex="7" })
			<script type="text/javascript">
				$(function () {
					$('#ExpedienteIndirecto@(hash)').chosen();
				});
			</script>
		@Html.ValidationMessageFor(model => model.ExpedienteIndirecto)
		</div>
	</div>


	</div><!--fin de div md-12-->
</div> <!--fin de row -->


		
			  @Html.HiddenFor(model => model.Id, new {@id="Id" + hash})
		

		
			  @Html.HiddenFor(model => model.UsuarioAlta, new {@id="UsuarioAlta" + hash})
		



	<div class="form-actions">
	
		<input type="button" value="Cancelar" id="Cancelar@(hash)" class="btn" />

		<input type="button" value="Guardar" id="Guardar@(hash)" class="btn green" />

	</div><!--fin form-actions>-->
</div> <!--fin de container-fluid-->
}

	<script type="text/javascript">       
		$(function () {
			app.Desbloquear();
		});
		
		if (oImputacionesContables == null)
			var oImputacionesContables = new ImputacionesContables.ts.ImputacionesContablesManager();
		
		var viewEditar = new ImputacionesContables.ts.Editar("@(hash)");
		oImputacionesContables.setEditar(viewEditar); 
		
		
	</script>	
