@using Syncrosoft.Framework.Controles.MVC.Script;
@using Syncrosoft.Framework.Controles.Mvc.JQuery.Datatables;
@using SSO.SGP.Web.Areas.Expedientes.Controllers;
@using Syncrosoft.Framework.Controles.MVC;
@using SSO.SGP.Web;
@model SSO.SGP.EntidadesDeNegocio.ModelosEscritoadm

@{
    Layout = null;
    var hash = "form" + Session.GetHashCode();
}

<link href="~/Scripts/A4.css" id="paper" rel="stylesheet" id="a4" />
<script src="@Url.Content("~/assets/plugins/chosen-bootstrap/chosen/chosen.jquery.min.js")" type="text/javascript"></script>
@*<script src="@Url.Content("~/assets/plugins/tinymce/js/tinymce/tinymce.min.js")" type="text/javascript"></script>*@
<script src="@Url.Content("~/assets/plugins/tinymce/js/tinymce/jquery.tinymce.min.js")" type="text/javascript"></script>
<link href="~/assets/plugins/tinyMCE-mention/css/autocomplete.css" rel="stylesheet" />
<link rel="stylesheet" href="@Url.Content("~/assets/plugins/chosen-bootstrap/chosen/chosen.css")" />
@Scripts.Render("~/bundles/jqueryval")
<script src="Areas/Expedientes/ts/ModelosEscritoADM/Crear.js"></script>
<script src="Areas/Expedientes/ts/ModelosEscritoADM/ModelosEscritoADMManager.js"></script>
<script src="ts/Syncro/SyncroModal.js"></script>
@using (Html.BeginForm("Crear", "ModelosEscritoADM", FormMethod.Post, new { id = hash }))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <div class="control-group">
                    @Html.LabelFor(model => model.Oficina, new { @class = "control-label" })
                    <div class="controls">
                        @Html.DropDownList("Oficina", (IEnumerable<System.Web.Mvc.SelectListItem>)ViewBag.OrganismosRef, new { @class = "form-control col-md-12", @id = "OrganismosRef" + hash, @tabindex = "1" })
                        <script type="text/javascript">
                            $(function () {
                                $('#OrganismosRef@(hash)').chosen();
                            });
                        </script>
                        @Html.ValidationMessageFor(model => model.Oficina)
                    </div>
                </div>
            </div>
            <!--fin de div md-12-->
            <div class="col-md-3">
                <div class="control-group">
                    @Html.LabelFor(model => model.Titulo, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.Titulo, new { @class = "form-control col-md-12", @id = "Titulo" + hash, @tabindex = "2" })
                        @Html.ValidationMessageFor(model => model.Titulo)
                    </div>
                </div>
            </div>
            <!--fin de div md-12-->
            <div class="col-md-3">
                <div class="control-group">
                    @Html.LabelFor(model => model.TipoActuacion, new { @class = "control-label" })
                    <div class="controls">
                        @Html.DropDownList("TipoActuacion", (IEnumerable<System.Web.Mvc.SelectListItem>)ViewBag.TiposActuacionADMRef, new { @class = "form-control col-md-12", @id = "TiposActuacionADMRef" + hash, @tabindex = "3" })
                        <script type="text/javascript">
                            $(function () {
                                $('#TiposActuacionADMRef@(hash)').chosen();
                            });
                        </script>
                        @Html.ValidationMessageFor(model => model.TipoActuacion)
                    </div>
                </div>
            </div>
            <!--fin de div md-12-->
            <div class="col-md-2">
                <div class="control-group">
                    @Html.LabelFor(model => model.Tipo, new { @class = "control-label" })
                    <div class="controls">
                        @Html.DropDownList("Tipo", (IEnumerable<System.Web.Mvc.SelectListItem>)ViewBag.Tipo, new { @class = "form-control col-md-12", @id = "Tipo" + hash, @tabindex = "3" })
                        <script type="text/javascript">
                            $(function () {
                                $('#Tipo@(hash)').chosen();
                            });
                        </script>
                        @Html.ValidationMessageFor(model => model.Tipo)
                    </div>
                </div>
            </div>
            <!--fin de div md-12-->
        </div>
        <!--fin del row-->

        <div class="row">
            <div class="col-md-12">
                <div class="control-group">
                    @Html.LabelFor(model => model.Contenido, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextAreaFor(m => m.Contenido, new { @class = "form-control col-md-12", @id = "Contenido" + hash })
                        @Html.ValidationMessageFor(model => model.Contenido)
                    </div>
                </div>
            </div>
            <!--fin de div md-12-->
        </div>
        <!--fin de row -->
        <div class="row">
            <div class="col-md-12">
                <div class="control-group">
                    <label class="control-label">Cargo Automático</label>
                    <div class="controls">
                        @Html.DropDownList("CargoAutomatico", (IEnumerable<System.Web.Mvc.SelectListItem>)ViewBag.OrganismosRef, new { @class = "form-control col-md-12", @id = "CargoAutomatico" + hash, @tabindex = "1" })
                        <script type="text/javascript">
                            $(function () {
                                $('#CargoAutomatico@(hash)').append($(' <option>', {
                                    value: 0,
                                    text: 'Ninguno'
                                }));
                                $('#CargoAutomatico@(hash)').chosen();
                            });
                        </script>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-actions">

            <input type="button" value="Cancelar" id="Cancelar@(hash)" class="btn" />

            <input type="button" value="Guardar" id="Guardar@(hash)" class="btn green" />

            <input type="button" value="Guardar & Nuevo" id="GuardarYNuevo@(hash)" class="btn blue" />

        </div>
        <!--fin form-actions>-->
    </div> <!--fin de container-fluid-->
}

<script type="text/javascript">
    $(function () {
        app.Desbloquear();
    });

    function changeCSS() {
        //alert("se cambia la hoja de estilos")
        $('#paper').attr('href', '/scripts/a4l.css');
    }

    if (oModelosEscritoADM == null)
        var oModelosEscritoADM = new ModelosEscritoADM.ts.ModelosEscritoADMManager();

    oModelosEscritoADM.setCrear(new ModelosEscritoADM.ts.Crear("@(hash)"));



</script>
