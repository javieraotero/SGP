@using Syncrosoft.Framework.Controles.MVC.Script;
@using Syncrosoft.Framework.Controles.Mvc.JQuery.Datatables;
@using SSO.SGP.Web.Areas.Expedientes.Controllers
@using Syncrosoft.Framework.Controles.MVC;
@model SSO.SGP.EntidadesDeNegocio.DivisionesExtraPresupuestarias

@{
    Layout = null;
    var hash = "form" + Session.GetHashCode();
}

<script src="@Url.Content("~/assets/plugins/chosen-bootstrap/chosen/chosen.jquery.min.js")" type="text/javascript"></script>

<link rel="stylesheet" href="@Url.Content("~/assets/plugins/chosen-bootstrap/chosen/chosen.css")" />
@Scripts.Render("~/bundles/jqueryval")
<script src="Areas/Expedientes/ts/DivisionesExtraPresupuestarias/Crear.js"></script>
<script src="Areas/Expedientes/ts/DivisionesExtraPresupuestarias/DivisionesExtraPresupuestariasManager.js"></script>
<script src="ts/Syncro/SyncroModal.js"></script>
@using (Html.BeginForm("Crear", "DivisionesExtraPresupuestarias", FormMethod.Post, new { id = hash }))
{
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="control-group">
                    @Html.LabelFor(model => model.Nombre, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control col-md-12", @id = "Nombre" + hash, @tabindex = "2" })
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>
                </div>
            </div>
            <!--fin de div md-12-->
            <div class="col-md-6">
                <div class="control-group">
                    @Html.LabelFor(model => model.CodigoCESIDA, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.CodigoCESIDA, new { @class = "form-control col-md-12", @id = "CodigoCESIDA" + hash, @tabindex = "3" })
                        @Html.ValidationMessageFor(model => model.CodigoCESIDA)
                    </div>
                </div>
            </div>
            <!--fin de div md-12-->
        </div>
        <!--fin del row-->

        <div class="row">

            <div class="col-md-6">

                <div class="control-group">
                    @Html.LabelFor(model => model.PartidaPresupuestaria, new { @class = "control-label" })
                    <div class="controls">
                        @Html.DropDownList("PartidaPresupuestaria", (IEnumerable<System.Web.Mvc.SelectListItem>)ViewBag.PartidasPresupuestarias, new { @class = "form-control col-md-12", @id = "PartidasPresupuestarias" + hash, @tabindex = "4" })
                        <script type="text/javascript">
                            $(function () {
                                $('#PartidaPresupuestaria@(hash)').chosen();
                            });
                        </script>
                        @Html.ValidationMessageFor(model => model.PartidaPresupuestaria)
                    </div>
                </div>


            </div>
            <!--fin de div md-12-->
        </div>
        <!--fin de row -->




        <div class="form-actions">

            <input type="button" value="Cancelar" id="Cancelar@(hash)" class="btn" />

            <input type="button" value="Guardar" id="Guardar@(hash)" class="btn green" />

            <input type="button" value="Guardar & Nuevo" id="GuardarYNuevo@(hash)" class="btn blue" />

        </div>
        <!--fin form-actions>-->
    </div> <!--fin de container-fluid-->
}

<script type="text/javascript">
    $(function () {
        app.Desbloquear();
    });

    if (oDivisionesExtraPresupuestarias == null)
        var oDivisionesExtraPresupuestarias = new DivisionesExtraPresupuestarias.ts.DivisionesExtraPresupuestariasManager();

    var viewCrear = new DivisionesExtraPresupuestarias.ts.Crear("@(hash)");
    oDivisionesExtraPresupuestarias.setCrear(viewCrear);


</script>
