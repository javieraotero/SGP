@using Syncrosoft.Framework.Controles.MVC.Script;
@using Syncrosoft.Framework.Controles.Mvc.JQuery.Datatables;
@using SSO.SGP.Web.Controllers;
@using Syncrosoft.Framework.Controles.MVC;
@using SSO.SGP.Web.Areas.Suministros.Controllers;
@model SSO.SGP.EntidadesDeNegocio.CustomPedidoDeSuministros

@{
    Layout = null;
    var hash = "form" + Session.GetHashCode();
}

<script src="@Url.Content("~/assets/plugins/bootstrap-editable/bootstrap-editable/js/bootstrap-editable.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/assets/plugins/bootstrap-switch/static/js/bootstrap-switch.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/assets/plugins/chosen-bootstrap/chosen/chosen.jquery.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ts/Syncro/SyncroTabla.js")" type="text/javascript"></script>
<link rel="stylesheet" href="@Url.Content("~/assets/plugins/bootstrap-editable/bootstrap-editable/css/bootstrap-editable.css")" />
<link rel="stylesheet" href="@Url.Content("~/assets/plugins/bootstrap-switch/static/stylesheets/bootstrap-switch.min.css")" />
<link rel="stylesheet" href="@Url.Content("~/assets/plugins/chosen-bootstrap/chosen/chosen.css")" />

@Scripts.Render("~/bundles/jqueryval")
<script src="Areas/Suministros/ts/PedidosDeSuministros/Crear.js"></script>
<script src="Areas/Suministros/ts/PedidosDeSuministros/PedidosDeSuministrosManager.js"></script>
<script src="ts/Syncro/SyncroModal.js"></script>
<script src="ts/Syncro/SyncroAutoComplete.js"></script>
@using (Html.BeginForm("Editar", "PedidosDeSuministros", FormMethod.Post, new { id = hash }))
{
    <div class="container-fluid">

        <div class="row">

            <div class="col-md-5">

                <div class="control-group">
                    @Html.LabelFor(model => model.Organismo, new { @class = "control-label" })
                    <div class="controls">
                        @Html.DropDownList("Organismo", (IEnumerable<System.Web.Mvc.SelectListItem>)ViewBag.OrganismosRef, new { @class = "form-control col-md-12", @id = "OrganismosRef" + hash, @tabindex = "1" })
                        <script type="text/javascript">
                            $(function () {
                                $('#OrganismosRef@(hash)').chosen();
                            });
                        </script>
                        @Html.ValidationMessageFor(model => model.Organismo)
                    </div>
                </div>


            </div>
            <!--fin de div md-12-->
            <div class="col-md-3">

                <div class="control-group">
                    @Html.LabelFor(model => model.FechaDePedido, new { @class = "control-label" })
                    <div class="controls">
                        <div class="input-append date date-picker" data-date="12-02-2012" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                            @Html.TextBoxFor(model => model.FechaDePedido, "{0:dd/MM/yyyy}", new { @class = "m-wrap form-control m-ctrl-medium date-picker", @id = "FechaDePedido" + hash, @tabindex = "2" })
                            <span class="add-on"><i class="icon-calendar"></i></span>
                        </div>
                        <script type="text/javascript">
                            $(function () {
                                $('#FechaDePedido@(hash)').datepicker(pickerOpts);
                            });
                        </script>
                        @Html.ValidationMessageFor(model => model.FechaDePedido)
                    </div>
                </div>


            </div>
            <!--fin de div md-12-->
            <div class="col-md-2">

                <div class="control-group">
                    @Html.LabelFor(model => model.Entregado, new { @class = "control-label" })
                    <div class="controls">
                        @*@Html.CheckBoxFor(m => m.Entregado, new { @id = "Entregado" + hash })*@
                        <input type="checkbox" id="chkEntregado@(hash)" name="chkEntregado" @(Model.Entregado ? "checked" : "") />
                        <input type="hidden" id="Entregado@(hash)" name="Entregado" value="@(Model.Entregado ? "true" : "false")" />
                        <script type="text/javascript">
                            $(function () {
                                $('#chkEntregado@(hash)').bootstrapSwitch();
                                $('#chkEntregado@(hash)').on("switch-change", function (e, data) {
                                    $("#Entregado@(hash)").val(data.value)
                                    //console.log("change", data.value);
                                });
                            });
                        </script>
                        @Html.ValidationMessageFor(model => model.Entregado)
                    </div>
                </div>


            </div>

        <div class="col-md-2">
            <div class="control-group">
                <h3><span id="Numero@(hash)">@Model.Id</span></h3>
            </div>
        </div>
            <!--fin de div md-12-->
        </div>
        <!--fin del row-->

        <div class="row">

            <div class="col-md-4">

                <div class="control-group">
                    <label class="control-label" for="Articulo">Articulo</label>
                    <div class="controls">
                        <input type="text" id="txtArticulo@(hash)" class="form-control col-md-12" tabindex="4" placeholder="Seleccione Articulo" />
                        <p class="help-block">Escriba parte del artículo</p>
                        <input type="hidden" id="Articulo@(hash)" name="Articulo" />
                        @*			<script type="text/javascript">
			$(function () {
				$("#txtArticulo@(hash)").autocomplete({
					source: "@Url.Action("JsonSelect", "ArticulosDeSuministros")",
					//appendTo: '#demo',
					minLength: 2,
					select: function (event, ui) {
						$("#txtArticulo@(hash)").val(ui.item.text);
						$("#Articulo@(hash)").val(ui.item.value);
						return false;
					}
				});
			});
			</script>*@
                    </div>
                </div>


            </div>
            <!--fin de div md-12-->
            <div class="col-md-3">

                <div class="control-group">
                    Entregado
		<div class="controls">
            <input type="text" name="CantidadEntregada" id="CantidadEntregada@(hash)" class="form-control" tabindex="5" />
        </div>
                </div>



            </div>
            <!--fin de div md-12-->
            <div class="col-md-3">

                <div class="control-group">
                    Solicitado
		<div class="controls">
            <input type="text" name="CantidadSolicitada" id="CantidadSolicitada@(hash)" class="form-control" tabindex="6" />
        </div>
                </div>



            </div>
            <!--fin de div md-12-->
            <div class="col-md-2">

                <div class="control-group">
                    &nbsp;
		<div class="controls">
            <input type="button" class="btn blue" id="Agregar@(hash)" value="Agregar" name="Agregar" tabindex="7" />
        </div>
                </div>

            </div>
            <!--fin de div md-12-->
        </div>
        <!--fin del row-->
        <br />
        <div class="row">

            <div class="col-md-12">

                <div class="control-group">
                    <label class="control-label">Detalle</label>
                    <div class="controls">
                        <input type="hidden" id="DetalleData" value="@Html.Raw(Json.Encode(Model.Detalle.ToList()))" />
                        @(SyncroHtml.TablaJson<SSO.SGP.EntidadesDeNegocio.DetalleDePedido>(new SSO.SGP.EntidadesDeNegocio.DetalleDePedido(), "ArticulosDelPedidoDeSuministros/JsonT", new { @id = "Detalle" + hash, @class = "table table-striped table-bordered table-advance table-hover", data_cargar = "false" }))
                    </div>
                </div>


            </div>
            <!--fin de div md-12-->
        </div>
        <!--fin de row -->

        <div class="form-actions">
            <input type="hidden" value="@Model.Id" name="Id" id="Id@(hash)" />
            <input type="button" value="Cancelar" id="Cancelar@(hash)" class="btn" />
            <input type="button" value="Guardar" id="Guardar@(hash)" class="btn green" />
            <input type="button" value="Guardar & Nuevo" id="GuardarYNuevo@(hash)" class="btn blue" />
            <input type="button" value="Imprimir" id="Imprimir@(hash)" class="btn yellow" />
        </div>
        <!--fin form-actions>-->
    </div> <!--fin de container-fluid-->
}

<script type="text/javascript">
    $(function () {
        app.Desbloquear();
    });

    if (oPedidosDeSuministros == null)
        var oPedidosDeSuministros = new PedidosDeSuministros.ts.PedidosDeSuministrosManager();

    var viewCrear = new PedidosDeSuministros.ts.Crear("@(hash)");
    oPedidosDeSuministros.setEditar(viewCrear);
</script>
