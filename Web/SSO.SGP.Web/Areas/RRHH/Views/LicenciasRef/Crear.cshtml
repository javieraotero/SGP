@using Syncrosoft.Framework.Controles.MVC.Script;
@using Syncrosoft.Framework.Controles.Mvc.JQuery.Datatables;
@using SSO.SGP.Web.Controllers;
@using SSO.SGP.Web.Areas.RRHH.Controllers;
@using Syncrosoft.Framework.Controles.MVC;
@model SSO.SGP.EntidadesDeNegocio.LicenciasRef

@{
    Layout = null;
    var hash = "form" + Session.GetHashCode();
}

<script src="@Url.Content("~/assets/plugins/bootstrap-switch/static/js/bootstrap-switch.min.js")" type="text/javascript"></script>

<link rel="stylesheet" href="@Url.Content("~/assets/plugins/bootstrap-switch/static/stylesheets/bootstrap-switch.min.css")" />
@Scripts.Render("~/bundles/jqueryval")
<script src="Areas/RRHH/ts/LicenciasRef/Crear.js"></script>
<script src="Areas/RRHH/ts/LicenciasRef/LicenciasRefManager.js"></script>
<script src="ts/Syncro/SyncroModal.js"></script>
@using (Html.BeginForm("Crear", "LicenciasRef", FormMethod.Post, new { id = hash }))
{
    <div class="container-fluid">

        <div class="row">

            <div class="col-md-6">

                <div class="control-group">
                    @Html.LabelFor(model => model.Descripcion, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control col-md-12", @id = "Descripcion" + hash, @tabindex = "1" })
                        @Html.ValidationMessageFor(model => model.Descripcion)
                    </div>
                </div>
            </div>
            <!--fin de div md-12-->
            <div class="col-md-3">

                <div class="control-group">
                    @Html.LabelFor(model => model.PorAnio, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.PorAnio, new { @class = "form-control col-md-12", @id = "PorAnio" + hash, @tabindex = "2" })
                        @Html.ValidationMessageFor(model => model.PorAnio)
                    </div>
                </div>

            </div>
            <!--fin de div md-12-->
            <div class="col-md-3">

                <div class="control-group">
                    @Html.LabelFor(model => model.PorLicencia, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.PorLicencia, new { @class = "form-control col-md-12", @id = "PorLicencia" + hash, @tabindex = "3" })
                        @Html.ValidationMessageFor(model => model.PorLicencia)
                    </div>
                </div>
            </div>
            <!--fin de div md-12-->
        </div>
        <!--fin del row-->
        <div class="row">
            <div class="col-md-6">

                <div class="control-group">
                    @Html.LabelFor(model => model.UnidadTemporalPorAnio, new { @class = "control-label" })
                    <div class="controls">
                        @Html.DropDownList("UnidadTemporalPorAnio", (IEnumerable<System.Web.Mvc.SelectListItem>)ViewBag.UnidadesTemporales, new { @class = "form-control col-md-12", @id = "UnidadTemporalPorAnio" + hash, @tabindex = "2" })
                        @Html.ValidationMessageFor(model => model.UnidadTemporalPorAnio)
                    </div>
                </div>
            </div>

            <div class="col-md-6">

                <div class="control-group">
                    @Html.LabelFor(model => model.UnidadTemporalPorLicencia, new { @class = "control-label" })
                    <div class="controls">
                        @Html.DropDownList("UnidadTemporalPorLicencia", (IEnumerable<System.Web.Mvc.SelectListItem>)ViewBag.UnidadesTemporales, new { @class = "form-control col-md-12", @id = "UnidadTemporalPorLicencia" + hash, @tabindex = "2" })
                        @Html.ValidationMessageFor(model => model.UnidadTemporalPorLicencia)
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="control-group">
                    @Html.LabelFor(model => model.DiasTopeExcepcion, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.DiasTopeExcepcion, new { @class = "form-control col-md-12", @id = "PorLicencia" + hash, @tabindex = "3" })
                        @Html.ValidationMessageFor(model => model.DiasTopeExcepcion)
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="control-group">
                    @Html.LabelFor(model => model.TopeExcepcionUnidadTemporal, new { @class = "control-label" })
                    <div class="controls">
                        @Html.DropDownList("TopeExcepcionUnidadTemporal", (IEnumerable<System.Web.Mvc.SelectListItem>)ViewBag.UnidadesTemporales, new { @class = "form-control col-md-12", @id = "TopeExcepcionUnidadTemporal" + hash, @tabindex = "2" })
                        @Html.ValidationMessageFor(model => model.TopeExcepcionUnidadTemporal)
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="control-group">
                    @Html.LabelFor(model => model.DiasParaReinicioDeSaldo, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.DiasParaReinicioDeSaldo, new { @class = "form-control col-md-12", @id = "DiasParaReinicioDeSaldo" + hash, @tabindex = "3" })
                        @Html.ValidationMessageFor(model => model.DiasParaReinicioDeSaldo)
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="control-group">
                    @Html.LabelFor(model => model.UnidadDeContextoPorLicencia, new { @class = "control-label" })
                    <div class="controls">
                        @Html.DropDownList("UnidadDeContextoPorLicencia", (IEnumerable<System.Web.Mvc.SelectListItem>)ViewBag.UnidadesDeContexto, new { @class = "form-control col-md-12", @id = "UnidadDeContextoPorLicencia" + hash, @tabindex = "2" })
                        @Html.ValidationMessageFor(model => model.UnidadDeContextoPorLicencia)
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="control-group">
                    @Html.LabelFor(model => model.PorAgente, new { @class = "control-label" })
                    <div class="controls">
                        @Html.CheckBoxFor(
                m => m.PorAgente,
new { @id = "PorAgente" + hash })
                        <script type="text/javascript">
                            $(function () {
                                $('#PorAgente@(hash)').bootstrapSwitch();
                            });
                        </script>
                        @Html.ValidationMessageFor(model => model.PorAgente)
                    </div>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-md-12">

                <div class="control-group">
                    @Html.LabelFor(model => model.Observaciones, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.Observaciones, new { @class = "form-control col-md-12", @id = "Observaciones" + hash, @tabindex = "4" })
                        @Html.ValidationMessageFor(model => model.Observaciones)
                    </div>
                </div>



            </div>
            <!--fin de div md-12-->
        </div>
        <!--fin del row-->
        <div class="row">

            <div class="col-md-4">

                <div class="control-group">
                    @Html.LabelFor(model => model.DiasAcumulables, new { @class = "control-label" })
                    <div class="controls">
                        @Html.CheckBoxFor(
                m => m.DiasAcumulables,
                new { @id = "DiasAcumulables" + hash })
                        <script type="text/javascript">
                            $(function () {
                                $('#DiasAcumulables@(hash)').bootstrapSwitch();
                            });
                        </script>
                        @Html.ValidationMessageFor(model => model.DiasAcumulables)
                    </div>
                </div>


            </div>
            <!--fin de div md-12-->
            <div class="col-md-3">

                <div class="control-group">
                    @Html.LabelFor(model => model.CodigoRRHH, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.CodigoRRHH, new { @class = "form-control col-md-12", @id = "CodigoRRHH" + hash, @tabindex = "6" })
                        @Html.ValidationMessageFor(model => model.CodigoRRHH)
                    </div>
                </div>



            </div>
            <!--fin de div md-12-->
        </div>
        <!--fin de row -->




        <div class="form-actions">

            <input type="button" value="Cancelar" id="Cancelar@(hash)" class="btn" />

            <input type="button" value="Guardar" id="Guardar@(hash)" class="btn green" />

            <input type="button" value="Guardar & Nuevo" id="GuardarYNuevo@(hash)" class="btn blue" />

        </div>
        <!--fin form-actions>-->
    </div> <!--fin de container-fluid-->
}

<script type="text/javascript">
    $(function () {
        app.Desbloquear();
    });

    if (oLicenciasRef == null)
        var oLicenciasRef = new LicenciasRef.ts.LicenciasRefManager();

    var viewCrear = new LicenciasRef.ts.Crear("@(hash)");
    oLicenciasRef.setCrear(viewCrear);


</script>
