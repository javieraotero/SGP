        $(function () {
            var cat = localStorage.getItem('dni');
            console.log(cat);
            if (cat) {
                location.href = "/home/micertificado/?dni=" + cat;
            }

            $("#validar").click(function (e) {
                e.preventDefault();
                $("#espere").show();
                $("#validar").hide();
                $.get("/rrhh/agentes/validaragente/?dni=" + $("#dni").val() + "&codigo=" + $("#codigo").val(), null, function (data) {
                    if (data.Id > 0) {
                        $("#paso1").empty();
                        paso2 = paso2.replace("{nombre}", data.Nombre);
                        paso2 = paso2.replace("{agente}", data.Id);
                        $("#paso1").append(paso2);
                    } else {
                        $("#espere").hide();
                        $("#validar").show();
                        $("#error").show();
                    }
                });
            });

        });

    </script>
