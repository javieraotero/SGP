@{
    Layout = null;
}
<style>
    div.small {
        background: #32a852;
        border-radius: 50%;
        width: 150px;
        height: 80px;
        position: absolute;
        top: 99%;
        left: 50%;
        margin-left: -50px;
        margin-top: -50px;
        transition: all 2s;
    }

    div.big {
        width: 100%;
        height: 100%;
        top: 0;
        margin-top: 0;
        left: 0;
        margin-left: 0;
        border-radius: 0;
        background: #32a852;
    }

    .center {
        position: fixed; /* or absolute */
        top: 50%;
        left: 50%;
        /* bring your own prefixes */
        transform: translate(-50%, -50%);
        color: white;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 80px;
    }

    #container {
        left: 50%;
        top: 50%;
        position: absolute;
        transform: translate(-50%, -50%);
    }

    @@import url('https://fonts.googleapis.com/css?family=Barlow');

    .container {
        width: 100%;
        position: relative;
        overflow: hidden;
    }

    a {
        text-decoration: none;
    }

    h1.main, p.demos {
        -webkit-animation-delay: 18s;
        -moz-animation-delay: 18s;
        -ms-animation-delay: 18s;
        animation-delay: 18s;
    }

    #test {
        color: white;
        font-size: 80px;
        position: fixed; /* or absolute */
        top: 50%;
        left: 50%;
         font-family: 'Barlow', sans-serif;
        /* bring your own prefixes */
        transform: translate(-50%, -50%);
        text-align: center;
        animation: fadein 4s;
        -moz-animation: fadein 7s; /* Firefox */
        -webkit-animation: fadein 7s; /* Safari and Chrome */
        -o-animation: fadein 7s; /* Opera */
    }


    @@keyframes fadein {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    /* Firefox < 16 */
    @@-moz-keyframes fadein {

        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    /* Safari, Chrome and Opera > 12.1 */
    @@-webkit-keyframes fadein {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    /* Internet Explorer */
    @@-ms-keyframes fadein {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    /* Opera < 12.1 */
    @@-o-keyframes fadein {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }


</style>
<script src="~/Scripts/jquery-1.8.2.min.js"></script>

<div class="small" id="circle"></div>
<div id="test">Por favor indique a quien pasa la solicitud<br />
    <select id="pasar_a" style="font-size:25px">
        <option value="0" >Seleccione un Funcionario</option>
        @foreach (var a in new SSO.SGP.AccesoADatos.AgentesAD().GetFuncionarios().OrderBy(x=>x.Nombre)) { 
            <option value="@a.Id">@a.Nombre</option>
        }
    </select>
    <script>
        $(function () {
            @if (ViewBag.AgenteDefault != null) { 
                <text>
                $("#pasar_a").find("option[value=@ViewBag.AgenteDefault]").prop("selected", "selected");
                </text>
            }
        });
    </script>

    <button style="font-size:20px" id="enviar">Enviar</button>
</div>


<script>
    $(function () {
        me = this;
        setTimeout(function () { $("#circle").addClass("big"); }, 1);        

        $("#enviar").click(function (e) {
            $("#enviar").hide();
            if ($("#pasar_a").val() > 0) {
                $.get("http://localhost:55555/rrhh/restservices/confirmarypasar/?token=@ViewBag.Token&pasar_a=" + $("#pasar_a").val(), null, function (data) {
                    if (data.state) {
                        $("#test").empty();
                        $("#test").html("Gracias! La solicitud ha sido confirmada y enviada");
                    } else {
                        alert("Ha ocurrido un error. Contáctese con Secretaría de Sistemas");
                    }
                });
            } else {
                alert("No ha seleccionado un Funcionario");
            }
        });

    });


</script>
